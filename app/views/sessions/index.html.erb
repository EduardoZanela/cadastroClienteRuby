<%= content_for :head do%>
  <%= stylesheet_link_tag 'login'%>
<% end %>

<div class="container" style="margin-top: 10%;">
  <%= form_tag({action: 'login'}, class: 'form-signin') do %>
      <h2 class="form-signin-heading" style="text-align: center;">Please sign in</h2>
      <%= label_tag :email, 'Email Address', class: 'sr-only' %>
      <%= text_field_tag :email, nil ,class: "form-control", placeholder: "Email Address", type: 'email' %>
      <%= label_tag :password, 'Password', class: 'sr-only' %>
      <%= password_field_tag :password, nil ,class: "form-control", placeholder: "Password"  %>
      <%if notice%>
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong><%= notice %></strong>
          </div>
      <%end%>
      <%= submit_tag "Log In", class: "btn btn-lg btn-primary btn-block"%>
  <% end %>
</div> <!-- /container -->



